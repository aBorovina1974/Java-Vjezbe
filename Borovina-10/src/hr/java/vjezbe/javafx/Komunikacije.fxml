<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.KomunikacijeController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Pretraga komunikacija">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <FlowPane alignment="CENTER" hgap="10.0">
               <children>
                  <Label text="Prezime klijenta" />
                  <TextField fx:id="komunikacijeFilterTextField" />
                  <Button mnemonicParsing="false" onAction="#prikaziKomunikacije" text="Pretraži" />
               </children>
            </FlowPane>
            <TableView fx:id="komunikacijeTableView" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="klijentColumn" prefWidth="100.0" text="Klijent" />
                <TableColumn fx:id="zaposlenikColumn" prefWidth="100.0" text="Zaposlenik" />
                  <TableColumn fx:id="vrstaKomunikacijeColumn" prefWidth="120.0" text="Vrsta komunikacije" />
                  <TableColumn fx:id="sadrzajColumn" prefWidth="170.0" text="Sadržaj" />
                  <TableColumn fx:id="vrijemeColumn" prefWidth="110.0" text="Vrijeme" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
