<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.KlijentiController">
   <center>
      <VBox alignment="CENTER" prefHeight="350.0" prefWidth="600.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Pretraga klijenata">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <FlowPane alignment="CENTER" hgap="10.0">
               <children>
                  <Label text="Prezime klijenta" />
                  <TextField fx:id="klijentiFilterTextField" />
                  <Button mnemonicParsing="false" onAction="#prikaziklijente" text="Pretraži" />
               </children>
            </FlowPane>
            <TableView fx:id="klijentiTableView" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="oibColumn" prefWidth="100.0" text="OIB" />
                <TableColumn fx:id="prezimeColumn" prefWidth="100.0" text="Prezime" />
                  <TableColumn fx:id="imeColumn" prefWidth="100.0" text="Ime" />
                  <TableColumn fx:id="brojTelefonaColumn" prefWidth="100.0" text="Broj telefona" />
                  <TableColumn fx:id="emailColumn" prefWidth="100.0" text="e-mail" />
                  <TableColumn fx:id="datumRodjenjaColumn" prefWidth="100.0" text="Datum rođenja" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
