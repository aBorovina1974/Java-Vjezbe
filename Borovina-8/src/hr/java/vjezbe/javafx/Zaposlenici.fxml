<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.ZaposleniciController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="350.0" prefWidth="600.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Pretraga zaposlenika">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <FlowPane alignment="CENTER" hgap="10.0">
               <children>
                  <Label text="Prezime zaposlenika" />
                  <TextField fx:id="zaposleniciFilterTextField" />
                  <Button mnemonicParsing="false" onAction="#prikaziZaposlenike" text="Pretraži" />
               </children>
            </FlowPane>
            <TableView fx:id="zaposleniciTableView" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="korisnickoImeColumn" prefWidth="150.0" text="Korisničko ime" />
                <TableColumn fx:id="prezimeColumn" prefWidth="150.0" text="Prezime" />
                  <TableColumn fx:id="imeColumn" prefWidth="150.0" text="Ime" />
                  <TableColumn fx:id="sifraColumn" prefWidth="150.0" text="Šifra" />
              </columns>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
